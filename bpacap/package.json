{
  "name": "bpacap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2.5.1",
    "@sap-cloud-sdk/http-client": "^4.2.0",
    "@sap-cloud-sdk/resilience": "^4.2.0",
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bpaproject": "cds watch --open bpaproject/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "bpa": {
        "kind": "rest",
        "credentials": {
          "destination": "BPAP"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "admin": {
            "password": "manager",
            "roles": [
              "bpa_admin"
            ]
          },
          "viewer": {
            "password": "viewer",
            "roles": [
              "bpa_viewer"
            ]
          }
        }
      },
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/bpaproject"
  ]
}
